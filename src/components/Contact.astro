---
import { socials } from "@constants";
import type { Socials } from "@types";

const socialsList: Socials = socials;
---

<div>
  <h1 class="text-lg font-bold mb-8">Happy to Connect</h1>
  <p class="mb-4">
    I’d love to hear from you! Feel free to reach out on social media to say hi.
    Or you can always send me an email if you’d like to chat!
  </p>
  <div class="flex flex-wrap">
    {
      socialsList.map((social) => (
        <a
          class="pr-2 flex gap-2 dark:text-white-400 text-black-100 dark:hover:text-white-500 hover:text-black-500
                 hover:font-medium"
          href={social.url}
        >
          <p class="underline">{social.name}</p>
        </a>
      ))
    }
  </div>
</div>
